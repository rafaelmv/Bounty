<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_username">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/user_image" />

            <TextView
                android:layout_below="@id/user_image"
                android:text="Coffi"
                android:textAlignment="center"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/username"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        android:layout_below="@+id/card_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_info_card">

        <LinearLayout
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="01"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:id="@+id/user_ranking"/>

            <TextView
                android:text="$300"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:id="@+id/user_money"/>
        </LinearLayout>

        <LinearLayout

            android:layout_marginTop="45dp"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="Ranking"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:id="@+id/user_ranking_label"/>

            <TextView
                android:text="Gold"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:id="@+id/user_money_label"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="80dp"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <Button
                android:text="Ver trofeos"
                android:textColor="@color/colorPrimary"
                android:background="@color/transparent"
                android:textAlignment="center"
                android:layout_toRightOf="@+id/user_image"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"/>

            <Button
                android:text="Leaderboard"
                android:textColor="@color/colorPrimary"
                android:background="@color/transparent"
                android:textAlignment="center"
                android:layout_toRightOf="@+id/user_image"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>



    <android.support.v7.widget.RecyclerView
        android:layout_margin="10dp"
        android:layout_below="@+id/user_info_card"
        android:id="@+id/my_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
